@using PagedList.Mvc;
@model PagedList.IPagedList<BSA.Service.ServiceModel.BSAEmoloyeeModel>
@using PagedList;
@{
    ViewBag.Title = "Index";
}

<style>
    .table > thead > tr > th,
    .table > tbody > tr > th,
    .table > tfoot > tr > th,
    .table > thead > tr > td,
    .table > tbody > tr > td,
    .table > tfoot > tr > td {
        padding: 2px 2px 2px 2px;
    }
</style>

<link href="~/Content/CustomCss/search-form.css" rel="stylesheet" />

<div class="row">
    @using (Html.BeginForm("Index", "BSAEmployees", FormMethod.Get, new { @class = "example" }))
    {
        <div class="col-md-6">
            @Html.Label("Employee List", new { @style = "font-size:15px" })
        </div>
        <div class="col-md-6">
            @Html.Hidden("companyId")
            @Html.Editor("searchText", new { htmlAttributes = new { @autocomplete = "off", value = "", @placeholder = "Search..", @style = "width:50%" } })
            <button type="submit"><i class="fa fa-search "></i></button>
            <a href="@Url.Action("CreateOrEdit",new { id=0})" class="btn btn-primary pull-right">
                <span class="glyphicon glyphicon-plus-sign"></span> Add Employee
            </a>
        </div>
    }
</div>

<div class="row">
    <br />
    <hr style="border-color:#ff0000; padding:0px;margin-top: 5px;margin-bottom: 5px; border-width: 2px;" />
    <br /><table class="table table-striped table-condensed">
        <tr style="background-color:#4CAF50;color:#FFFFFF">
            <th>SL</th>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.First().NID)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.First().Company)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.First().Status)
            </th>

            <th class="text-center">Action</th>
        </tr>

        @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i }))
        {
            <tr>
                <td>
                    @((item.Index + 1) + (Model.PageNumber - 1) * Model.PageSize)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.Name)
                </td>
                <td nowrap>
                    @Html.DisplayFor(modelItem => item.Data.NID)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Data.Company)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Data.Status)
                </td>

                <td width="12%">
                    @*<a href="@Url.Action("GetEmployeeReport","Report", new { employeeId = item.Data.EmployeeId })" title="Export Bio-Data" target="_blank" class="btn btn-warning btn-xs">
                        <i class="fa fa-download" style="font-size:15px;" aria-hidden="true"></i>
                    </a>*@
                    <a href="@Url.Action("CreateOrEdit", new { id = item.Data.Id })" title="Update Employee" class="btn btn-info btn-xs">
                        <i class="fa fa-pencil" style="font-size:15px;" aria-hidden="true"></i>
                    </a>

                    <a href="@Url.Action("Details", "BSAEmployees", new {   id = item.Data.Id })" class="btn btn-success btn-xs" title="Employee Details">
                            <i class="fa fa-eye" style="font-size:15px;" aria-hidden="true"></i>
                        </a>

                </td>
            </tr>
        }

    </table>
    @if (Model.PageCount > 1)
    {
        <span class="btn btn-success">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        </span>
        <span class="checkbox">
            @Html.PagedListPager(Model, Page_No => Url.Action("Index", "BSAEmployees",
                            new { Page_No, Sorting_Order = Request.QueryString["Search"], SearchText = Request.QueryString["searchText"] }))
        </span>
    }

</div>
 
