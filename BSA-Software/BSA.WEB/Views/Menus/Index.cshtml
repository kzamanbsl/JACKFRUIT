@*@model IEnumerable<BSA.Data.Models.Menu>*@

@model IEnumerable<System.Linq.IGrouping<object, BSA.Data.Models.Menu>>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>Menu</h3>
    <hr />
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-striped">
        @foreach (var item in Model)
        {
            <tr style="background-color:cadetblue">
                <td colspan="4"><b>@item.Key</b></td>
            </tr>

            <tr style="background-color:orange">
                <td>
                    Order No
                </td>
                <td>
                    Menu
                </td>

                <td>
                    Status
                </td>

                <th class="text-center">Action</th>
            </tr>
            foreach (var menu in item.OrderBy(x=>x.OrderNo))
            {
            <tr>
                <td>@menu.OrderNo</td>
                <td>@menu.Name</td>
                <td>@Html.DisplayFor(modelItem=>menu.IsActive)</td>
                <td class="text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = menu.MenuId }) |
                    @Html.ActionLink("Details", "Details", new { id = menu.MenuId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = menu.MenuId })
                </td>
            </tr>

            }
            @*<tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td class="text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = item.MenuId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MenuId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MenuId })
                </td>
            </tr>*@
        }

    </table>
</body>
</html>
