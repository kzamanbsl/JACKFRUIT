@using BSA.Utility
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <link href="~/Images/Logo/b.png" rel="shortcut icon" type="image/x-icon" />
    <title>
        BSA
    </title>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    <script src="~/Scripts/bootstrap-select.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/moment-with-locales.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @*<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>*@

    <!-- SlimScroll -->
    @*<link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />*@
    <script src="~/Content/plugins/slimScroll/jquery.slimscroll.js"></script>
    <!-- FastClick -->
    @*<script src="~/Content/plugins/fastclick/fastclick.js"></script>*@

    <!-- AdminLTE App -->
    <script src="~/Content/dist/js/app.js"></script>
    <!-- AdminLTE for demo purposes -->
    @*<script src="~/Content/dist/js/demo.js"></script>*@
    @*<script src="~/Scripts/ApplicationScripts/ErpScripts.js"></script>*@

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">

    <link href="~/Content/dist/css/skins/_all-skins.css" rel="stylesheet" />
    @*<link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />*@
    <link href="~/Content/Login.css" rel="stylesheet" />

    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/themes/base/datepicker.css" rel="stylesheet" />
    @*<link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />*@


    @*<link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />*@



    @System.Web.Optimization.Styles.Render("~/Css")
    <style>
        .page-footer {
            background: #009270;
            /*background-color: #5CB85C;*/
            color: ghostwhite;
            padding: 10px;
            border: 1px solid white
        }

        .numberCircle {
            width: 90px;
            height: 50px;
            border-radius: 50%;
            border: 2px solid;
            background-color: #82da84;
            color: white;
            font-weight: bold;
            font-size: 17px;
        }

            .numberCircle span {
                width: 90px;
                height: 50px;
                color: red;
                padding-bottom: 50%;
                margin-left: 8px;
                margin-right: 8px;
            }



        .numberCircle2 {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: 2px solid;
            background-color: #82da84;
            color: white;
            font-weight: bold;
            font-size: 17px;
        }

            .numberCircle2 span {
                width: 50px;
                height: 50px;
                color: red;
                padding-bottom: 50%;
                margin-left: 8px;
                margin-right: 8px;
            }
    </style>


    @RenderSection("Head", false)

</head>
<body class="hold-transition skin-blue sidebar-mini" style="background:#ffffff">
    <div class="wrapper">

        <header class="main-header" style="background:#009270">
            <a href="#" class="logo" style="background:#009270">
                @*<span class="logo-mini "><span><b>B</b>SA</span></span>
                    <span class="logo-lg "><span><b>BSA</b></span></span>*@

                <span class="logo-mini ">
                    <span>
                        <img  style="width:60px; height:60px"  src="~/Images/Logo/bangladesh-seed-association.png" />
                    </span>
                </span>
                <span class="logo-lg ">
                    <span>
                        <img style="width:50px; height:50px" src="~/Images/Logo/bangladesh-seed-association.png" />
                    </span>
                </span>
            </a>
            <nav class="navbar navbar-static-top" style="background:#009270">
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>

                <a href="@Url.Action("Index","Home",null)" style="position: absolute;font:bold;font-size:20px;color:#ffffff;top:8px">
                    <b> BSA</b> | Bangladesh Seed Association
                </a>

                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="Height:50px">
                                @if (Request.IsAuthenticated)
                                {
                                    if (Session["Picture"] != null)
                                    {
                                        <img src="@Url.Content(Session["Picture"].ToString())" class="user-image" alt="Member Logo">
                                    }
                                    <span class="hidden-xs">
                                        @if (Session["UserName"] != null)
                                        {
                                            Session["UserName"].ToString();
                                        }
                                        else
                                        {
                                            Html.Action("Login", "User", null);
                                        }
                                    </span>
                                }
                            </a>
                            <ul class="dropdown-menu">
                                <li class="user-header" style="background:#009270">
                                    @if (Request.IsAuthenticated)
                                    {
                                        if (Session["Picture"] != null)
                                        {
                                            <img src="@Url.Content(Session["Picture"].ToString())" class="img-circle" alt="Member Logo">
                                        }
                                        <p>
                                            @if (Session["UserName"] != null)
                                            {
                                                @Session["UserName"].ToString();
                                            }
                                            else
                                            {
                                                Html.Action("Login", "User", null);
                                            }
                                        </p>
                                    }

                                </li>
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="@Url.Action("ChangePassword","User")" class="btn btn-success btn-flat">Change Password <i class="fa fa-key" aria-hidden="true"></i></a>
                                    </div>
                                    <div class="pull-right">

                                        @using (Html.BeginForm("Logout", "User", FormMethod.Post, new { id = "logoutForm" }))
                                        {
                                            <a class="btn btn-success btn-flat" href="javascript:document.getElementById('logoutForm').submit()">Logout <i class="fa fa-sign-out"></i></a>
                                        }

                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

        <!-- Left side column. contains the sidebar -->
        <aside class="main-sidebar">
            <section class="sidebar">
                <ul class="sidebar-menu">
                    @if (Session["UserName"] != null)
                    {
                        Html.RenderAction("MenuPartial", "Home");
                    }
                    else
                    {
                        Html.Action("Login", "User", null);
                    }

                </ul>
            </section>
        </aside>

        <div class="content-wrapper" style="background:#ffffff">
            <div style="padding:20px;">
                @RenderBody()
            </div>
        </div>

        <footer class="page-footer text-center">
            <strong>Copyright  &copy; KGeCom Ltd.</strong> All rights reserved.
        </footer>
    </div>
    @RenderSection("Scripts", false)

</body>

</html>
