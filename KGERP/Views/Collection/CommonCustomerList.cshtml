
@{
    ViewData["Title"] = "Customer List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model KGERP.Service.Implementation.Configuration.VMCommonSupplier

<style type="text/css">

    input, select, textarea {
        max-width: 100%;
    }

    .InlineBtn:hover {
        background-color: green;
        color: white;
        text-decoration: underline;
    }
</style>

<section class="content-header">
    <h1>
        Customer List
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li class="active">Customer</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-danger">

                    <div class="box">
                        <div class="box-danger">
                            <div class="box-header">

                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <div class="table-responsive">
                                    <table id="KgErpDataTable" class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>SL</th>
                                                <th>Code</th>
                                                <th>
                                                    Name
                                                </th>
                                                <th>
                                                    Contact
                                                </th>
                                                <th>
                                                    Email
                                                </th>
                                                <th>
                                                    Address
                                                </th>

                                                <th style="width:100px">
                                                    Action
                                                </th>
                                                @*<th style="width:100px">
                                                        Ledger
                                                    </th>*@
                                            </tr>
                                        </thead>
                                        @{int sl = 0;
                                        }
                                        <tbody>
                                            @foreach (var item in Model.DataList)
                                            {
                                                <tr>
                                                    <td>@(++sl)</td>
                                                    <td>
                                                        @item.Code
                                                    </td>
                                                    <td>
                                                        @item.Name
                                                    </td>
                                                    <td>
                                                        @item.ContactPerson
                                                    </td>
                                                    <td>
                                                        @item.Email
                                                    </td>
                                                    <td>
                                                        @item.Address, @item.Upazila, @item.Division @item.District, @item.Country
                                                    </td>

                                                    <td style="width:180px;">

                                                        @*@Html.ActionLink("Delivery Challan", "POwiseGoodsReceived", new { companyId = item.CompanyFK }, new { @title = "You can see all goods quantity that already Delivered to customer", @class = "InlineBtn", @target = "_blank" })
                                                            <br />*@

                                                        @Html.ActionLink("Invoices", "CommonCustomerOrderMasterList", new { companyId = item.CompanyFK, customerId = item.ID }, new { @class = "InlineBtn", @target = "_blank" })
                                                        <br />
                                                        @Html.ActionLink("Collection", "CustomerOrderCollectionSlave", new { companyId = item.CompanyFK, customerId = item.ID }, new { @class = "InlineBtn", @target = "_blank" })
                                                        <br />

                                                        @Html.ActionLink("Ledger", "InvoiceWiseCustomerLedgerOpening", new { companyId = item.CompanyFK, customerId = item.ID }, new { @target = "_blank", @class = "InlineBtn" })

                                                    </td>
                                                    @*<td style="width:180px;">

                                                            @Html.ActionLink("Payment Received Ledger", "VmLedger2SupplierPayment", new { companyId = item.CompanyFK }, new { @class = "InlineBtn", @target = "_blank" })

                                                        </td>*@
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="box-footer">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {

    <script type="text/javascript">

        $(document).ready(function () {
            $('.formValidator').bootstrapValidator();
        });
    </script>
}


