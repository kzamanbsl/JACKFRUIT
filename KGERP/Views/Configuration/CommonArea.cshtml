                                        @Html.DropDownListFor(model => model.EmployeeId, new SelectList(Model.EmployeeList, "Value", "Text"), "---Select---", new { @class = "dropdownsize form-control searchingDropdown", @id = "employeeId" })
                                        @Html.ValidationMessageFor(model => model.EmployeeId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group" style="padding:0px">
                                    <label for="message-text" class="col-form-label">Area Incharge:</label>
