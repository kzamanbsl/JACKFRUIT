                        <div class="box-body">
                            <div class="table-responsive text-nowrap">
                                <table id="KgErpDataTable" class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>SL</th>
                                            <th>
                                                Dealer Name
                                            </th>
                                            <th>
                                                Proprietor
                                            </th>
                                            <th>Payment Type</th>
                                            <th>
                                                Phone
                                            </th>
                                            <th>
                                                Email
                                            </th>
                                            <th>
                                                NID
                                            </th>
                                            <th>
                                                Security Amount
                                            </th>
                                            <th>
                                                Credit Limit
                                            </th>
                                            <th>
                                                Address
                                            </th>
                                            <th>
                                                Zone
                                            </th>

                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    @{int sl = 0;
                                    }
                                    <tbody>
                                        @foreach (var item in Model.DataList)
                                        {
                                            <tr>
                                                <td>@(++sl)</td>

                                                <td>
                                                    <a href="~/Configuration/CommonDealerById?deportId=@item.ID" target="_blank">@item.Name</a>
                                                </td>
                                                <td>
                                                    @item.Propietor
                                                </td>
                                                <td>
                                                    @item.PaymentType
                                                </td>
                                                <td>
                                                    @item.Phone
                                                </td>
                                                <td>
                                                    @item.Email
                                                </td>
                                                <td>
                                                    @item.NID
                                                </td>
                                                <td>
                                                    @item.SecurityAmount
                                                </td>
                                                <td>
                                                    @item.CreditLimit
                                                </td>
                                                <td>
                                                    @item.Address, @item.Upazila, @item.Division @item.District, @item.Country
                                                </td>
                                                <td>
                                                    @item.ZoneName (Incharge: @item.ZoneIncharge)
                                                </td>

                                                <td>
                                                    <a id="@item.ID" onclick="makeEditble(@item.ID);" class="linkPointer" title="Edit"><i class="fa fa-pencil-square-o"></i></a>
                                                    <a id="@item.ID" onclick="makeDeletable(@item.ID);" class="linkPointer" data-toggle="modal" data-target="#deleteModal" title="Delete"
                                                       data-placement="top">
                                                        <i class="glyphicon glyphicon-trash" aria-hidden="true"></i>
                                                    </a>

                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="box-footer">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

@using (Html.BeginForm("CommonDealer", "Configuration", FormMethod.Post, new { id = "commonDealerFormId", @class = "formValidator", @enctype = "multipart/form-data" }))
{
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @Html.HiddenFor(model => model.ID, new { Value = "", id = "deportIdDelete" })
    @Html.HiddenFor(model => model.ActionId, new { Value = "", id = "ActionIdDelete" })
    @Html.HiddenFor(model => model.CompanyFK, new { id = "CompanyFKDelete" })

    <div class="modal fade" id="deleteModal" data-toggle="modal" data-backdrop="static" data-keyboard="false" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close">
                        &times;
                    </button>
                    <h5 class="modal-title"><b>Dealer Delete</b></h5>

                </div>
                <div class="modal-body">
                    <div style="text-align:center">
                        <h3>Are you sure to delete this Dealer?</h3>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" id="btnClose" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" id="btnDelete" class="deleteId btn btn-primary"><i class="glyphicon glyphicon-check"></i>Confirm</button>
                </div>
            </div>
        </div>
    </div>
}


