                                    <tfoot>
                                        <tr>
                                            <th style="padding:5px;text-align:right;" colspan="5">Grand Total:</th>
                                            <th id="grandTotalPrice" style="padding:5px;text-align:right;">@String.Format("{0:0.00}", (Convert.ToDecimal(totalPrice)))</th>
