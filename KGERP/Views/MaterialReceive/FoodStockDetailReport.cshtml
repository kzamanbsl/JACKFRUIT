                        &nbsp;&nbsp;&nbsp;
                        <strong>
                            <span>@Model.ReceiveNo</span>
                        </strong>
                    </td>
                </tr>
                <tr>
                    <td style="width: 10%">
                        <strong>Stock Date</strong>
                    </td>
                    <td style="width: 30%; border-bottom: 1px solid #000000">
                        &nbsp;&nbsp;&nbsp;
                        <strong>
                            <span>@Model.ReceivedDate.ToString("dd-MM-yyyy")</span>
                        </strong>
                    </td>
                    <td style="width: 10%">
                        <strong>Stored By</strong>
                    </td>
                    <td style="width: 30%; border-bottom: 1px solid #000000">
                        &nbsp;&nbsp;&nbsp;
                        <strong>
