        }

        function GetProduct(productId) {
            $.ajax({
                url: "@Url.Action("CommonProductGet", "Configuration")",
                data: { companyId: "@Model.CompanyFK", productSubCategoryId: 0 },
                dataType: "json",
                type: "get",
                cache: true,
                contentType: "application/json; charset=utf-8",
                success: function (data) {

