@model KGERP.Data.CustomModel.ReportCustomModel

<div class="row">
    <div class="col-md-12" style="background-color: lightblue;">
        <span style="font-size:20px;color:#000000">Dealer List Report</span>
    </div>
</div>
<br />

@using (Html.BeginForm("DeportListReport", "Report", FormMethod.Post, new { @id = "idForm" }))
{

    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CompanyId, new { @id = "hfCompanyId" })

    <div class="row">

        <div class="col-md-2">
            <div class="form-group">
                <label for="message-text" class="col-form-label">Zone:</label>
                <br />
                @Html.DropDownListFor(model => model.ZoneId, new SelectList(Model.ZoneList, "Value", "Text"), new { id = "ddlCommon_ZoneFk", @class = "searchingDropdown form-control" })
                @Html.ValidationMessageFor(model => model.ZoneId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group">
                <label for="message-text" class="col-form-label">Region:</label>
                <br />
                @Html.DropDownListFor(model => model.SubZoneFk, Model.SubZoneList, new { id = "ddlCommon_RegionFk", @class = "searchingDropdown form-control" })
                @Html.ValidationMessageFor(model => model.SubZoneFk, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label for="message-text" class="col-form-label">Area:</label>
                <br />
                @Html.DropDownListFor(model => model.AreaId, new SelectList(Model.ZoneList, "Value", "Text"), new { id = "ddlCommon_AreFk", @class = "searchingDropdown form-control" })
              
                @Html.ValidationMessageFor(model => model.AreaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group">
                <label for="message-text" class="col-form-label">Territory:</label>
                <br />
                @Html.DropDownListFor(model => model.TerritoryId, Model.SubZoneList, new { id = "ddlCommon_TerritoryFk", @class = "searchingDropdown form-control" })
                @Html.ValidationMessageFor(model => model.TerritoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4" style="margin-top:24px;float:left;display:flex">
            <div class="form-group">
                <select class="pull-left" style="color:#ffffff; background-color:#dd4b39;height:34px;font-size:15px" name="ReportType" id="ReportType">
                    <option value="PDF">PDF</option>
                    <option value="EXCEL">EXCEL</option>
                    <option value="WORD">WORD</option>
                </select>
                <input type="submit" name="EXPORT" value="EXPORT" class="btn btn-success pull-left" formtarget="_blank" />
            </div>
        </div>
    </div>


}

<script>

    $(document).ready(function () {
        $("#ddlCommon_RegionFk").append("<option value=''>=Select Region=</option>");
        $("#ddlCommon_AreFk").append("<option value=''>=Select Region=</option>");
        $("#ddlCommon_TerritoryFk").append("<option value=''>=Select Region=</option>");


            $.ajax({
            type: "GET",
            url: "@Url.Action("CommonZonesList", "Configuration")",
            datatype: "Json",
            data: { companyId: @Model.CompanyId},
            success: function (data) {
                var items = "";
                if (data) {
                    $("#ddlCommon_ZoneFk").empty();
                    $("#ddlCommon_ZoneFk").append("<option value=''>==Select Zone==</option>");
                    $(data).each(function (index, item) {
                        $("#ddlCommon_ZoneFk").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                    });

                }
            }
        });


    });

    $('#ddlCommon_ZoneFk').change(function () {
        var zoneId = $("#ddlCommon_ZoneFk").val();

        $.ajax({
            type: "GET",
            url: "@Url.Action("GetRegionList", "Configuration")",
            datatype: "Json",
            data: { companyId: @Model.CompanyId, zoneId: zoneId },
            success: function (data) {
                var items = "";
                if (data) {
                    $("#ddlCommon_RegionFk").empty();
                    $(data).each(function (index, item) {
                        $("#ddlCommon_RegionFk").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                    });

                }
            }
        });
    });
    $('#ddlCommon_RegionFk').change(function () {
        var zoneValue = $("#ddlCommon_ZoneFk").val();
        var regionValue = $("#ddlCommon_RegionFk").val();
        $.ajax({
            type: "GET",
            url: "@Url.Action("GetAreaList", "Configuration")",
            datatype: "Json",
            data: { companyId:@Model.CompanyId, zoneId: zoneValue, regionId: regionValue },
            success: function (data) {
                if (data) {
                    $("#ddlCommon_AreFk").empty();
                    $(data).each(function (index, item) {
                        $("#ddlCommon_AreFk").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                    });
                   

                }
            }
        });

    });

    $('#ddlCommon_AreFk').change(function () {

        var areaValue = $("#ddlCommon_AreFk :selected").val();
        $.ajax({
            type: "GET",
            url: "@Url.Action("CommonSubZonesGet", "Configuration")",
            datatype: "Json",
            data: { id: areaValue },
            success: function (data) {
                if (data) {
                    $("#ddlCommon_TerritoryFk").empty();
                    $("#ddlCommon_TerritoryFk").append("<option value=''>==Select Territory==</option>");
                    $(data).each(function (index, item) {
                        $("#ddlCommon_TerritoryFk").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                       
                    });
                  
                }
            }
        });
    });
   
</script>




